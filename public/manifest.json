{
  "manifest_version": 3,
  "name": "Support with Mellowtel",
  "version": "0.0.1",
  "description": "Support your favorite plugin with Mellowtel",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "host_permissions": ["<all_urls>"],
  "permissions": ["cookies", "storage", "declarativeNetRequestWithHostAccess", "tabs"],
  "web_accessible_resources": [
    {
      "resources": ["pascoli.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
